{
  "manifest_version": 3,
  "name": "Instagram Auto-Scroller",
  "version": "1.0",
  "description": "Auto-scrolls Instagram Reels and optionally injects a toggle button.",
  "icons": {
    "128": "imgs/icon128.png"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://www.instagram.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/reels/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
